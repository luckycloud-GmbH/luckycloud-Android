<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <font
        android:fontStyle="normal"
        android:fontWeight="400"
        android:font="@font/sofiapro_regular"

        app:fontStyle="normal"
        app:fontWeight="400"
        app:font="@font/sofiapro_regular"/>
    <font
        android:fontStyle="italic"
        android:fontWeight="400"
        android:font="@font/sofiapro_regular_italic"

        app:fontStyle="italic"
        app:fontWeight="400"
        app:font="@font/sofiapro_regular_italic" />

    <font
        android:fontStyle="normal"
        android:fontWeight="500"
        android:font="@font/sofiapro_medium"

        app:fontStyle="normal"
        app:fontWeight="500"
        app:font="@font/sofiapro_medium"/>
    <font
        android:fontStyle="italic"
        android:fontWeight="500"
        android:font="@font/sofiapro_medium_italic"

        app:fontStyle="italic"
        app:fontWeight="500"
        app:font="@font/sofiapro_medium_italic" />

    <font
        android:fontStyle="normal"
        android:fontWeight="600"
        android:font="@font/sofiapro_semi_bold"

        app:fontStyle="normal"
        app:fontWeight="600"
        app:font="@font/sofiapro_semi_bold"/>
    <font
        android:fontStyle="italic"
        android:fontWeight="600"
        android:font="@font/sofiapro_semibold_italic"

        app:fontStyle="italic"
        app:fontWeight="600"
        app:font="@font/sofiapro_semibold_italic" />
