<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:paddingHorizontal="@dimen/margin_large"
    android:background="@android:color/transparent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_large"
            android:orientation="vertical">

            <include layout="@layout/settings_account_info"/>
            <include layout="@layout/settings_app_security"/>
            <include layout="@layout/settings_backup_folder"/>
            <include layout="@layout/settings_appearance"/>
            <include layout="@layout/settings_cache"/>
            <include layout="@layout/settings_advanced_options"/>
            <include layout="@layout/settings_about"/>
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/popup_select_expiration_time_layout"
        layout="@layout/popup_select_expiration_time"
        android:visibility="invisible"/>

    <include
        android:id="@+id/popup_select_bottom_bar_layout"
        layout="@layout/popup_select_bottom_bar"
        android:visibility="invisible"/>

    <include
        android:id="@+id/popup_select_execute_ocr_layout"
        layout="@layout/popup_select_execute_ocr"
        android:visibility="invisible"/>

    <include
        android:id="@+id/popup_open_office_layout"
        layout="@layout/popup_open_office"
        android:visibility="invisible"/>

    <include
        android:id="@+id/popup_open_pdf_layout"
        layout="@layout/popup_open_pdf"
        android:visibility="invisible"/>

    <include
        android:id="@+id/popup_thumb_net_mode_layout"
        layout="@layout/popup_thumb_net_mode"
        android:visibility="invisible"/>

    <include
        android:id="@+id/popup_cache_maximum_size_layout"
        layout="@layout/popup_cache_maximum_size"
        android:visibility="invisible"/>
</RelativeLayout>