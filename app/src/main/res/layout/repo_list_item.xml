<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_big">

    <androidx.cardview.widget.CardView
        android:id="@+id/repo_list_item_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lv_item_height"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/dialog_msg_background"
        app:cardCornerRadius="@dimen/margin_normal"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/repo_list_item_icon"
                android:layout_width="@dimen/lv_icon_width"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/lv_item_padding_left"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_normal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/repo_list_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="title"
                    android:textSize="@dimen/subtitle_txt_size"
                    android:textColor="@color/text_view_color"
                    android:fontFamily="@font/euclidsquare_medium"/>

                <TextView
                    android:id="@+id/repo_list_item_subtitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/euclidsquare_regular"
                    android:textColor="@color/text_view_secondary_color"
                    android:text="subtitle"
                    android:textSize="@dimen/subtitle_txt_size"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/repo_list_item_action"
                android:layout_width="@dimen/lv_iv_action_width"
                android:layout_height="fill_parent"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="@dimen/margin_normal"
                android:src="@drawable/ic_right"
                app:tint="@color/luckycloud_green" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>