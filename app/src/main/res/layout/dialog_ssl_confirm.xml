<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/msg_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_big"
        android:layout_marginHorizontal="@dimen/margin_big"
        android:text="@string/ssl_confirm_title"
        android:textSize="@dimen/topic_txt_size"
        android:textColor="@color/luckycloud_green"
        android:gravity="center"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_normal"
        android:layout_marginHorizontal="@dimen/margin_big"
        android:textSize="@dimen/title_txt_size" />

    <LinearLayout
        android:id="@+id/cert_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_larger"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/issuer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/issuer_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/issued_to"
                android:textSize="@dimen/subtopic_txt_size"
                android:fontFamily="@font/euclidsquare_semibold"/>

            <TextView
                android:id="@+id/common_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/finger_prints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/finger_prints_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/finger_prints"
                    android:textSize="@dimen/subtopic_txt_size"
                    android:fontFamily="@font/euclidsquare_semibold"/>
                
                <TextView
                    android:id="@+id/sha256"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/sha1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/md5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/serial_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/validity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/validity_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/period_of_validity"
                android:textSize="@dimen/subtopic_txt_size"
                android:fontFamily="@font/euclidsquare_semibold"/>

            <TextView
                android:id="@+id/not_before"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/not_after"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <include
        layout="@layout/dialog_button_double"/>
</LinearLayout>
