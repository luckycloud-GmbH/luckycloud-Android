<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/margin_big"
    android:paddingHorizontal="@dimen/margin_large">

    <androidx.cardview.widget.CardView
        android:id="@+id/view_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/dialog_msg_background"
        app:cardCornerRadius="@dimen/margin_normal"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/padding_small"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/transfer_file_multi_select_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/lv_multi_select_padding_left"
                android:src="@drawable/checkbox_unchecked"
                android:visibility="gone"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/lv_icon_height"
                android:layout_marginStart="@dimen/lv_item_padding_left"
                android:gravity="center">

                <ImageView
                    android:id="@+id/transfer_file_icon"
                    android:layout_width="@dimen/lv_icon_width"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_file" />

                <LinearLayout
                    android:id="@+id/transfer_file_image_layout"
                    android:layout_width="@dimen/lv_icon_width2"
                    android:layout_height="@dimen/lv_icon_height2"
                    android:background="@drawable/rounded_image"
                    android:weightSum="1"
                    android:gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/transfer_file_icon_image"
                        android:layout_width="36dp"
                        android:layout_height="46dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/transfer_file_layout"
                    android:layout_width="@dimen/lv_icon_width2"
                    android:layout_height="@dimen/lv_icon_height2"
                    android:background="@drawable/ic_file"
                    android:gravity="bottom|end"
                    android:paddingHorizontal="@dimen/padding_small"
                    android:paddingVertical="@dimen/padding_small"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/transfer_file_icon_with_extension"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="fitEnd"
                        android:layout_gravity="bottom"/>

                    <TextView
                        android:id="@+id/transfer_file_icon_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/subinfo_txt_size"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/lv_multi_select_padding_left"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/transfer_target_path"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="@color/text_view_secondary_color"
                        android:textSize="@dimen/subtitle_txt_size"
                        android:fontFamily="@font/euclidsquare_regular"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/transfer_file_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="@color/text_view_color"/>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/transfer_file_state_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:foreground="?selectableItemBackground"
                    app:cardBackgroundColor="@color/red"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/transfer_file_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_small"
                        android:layout_marginVertical="2dp"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="@color/field"
                        android:textSize="@dimen/subtitle_txt_size"
                        android:fontFamily="@font/euclidsquare_regular"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/transfer_start_time_text"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="@color/text_view_secondary_color"
                        android:textSize="@dimen/subtitle_txt_size"/>

                    <TextView
                        android:id="@+id/transfer_file_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:gravity="center"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="@color/text_view_secondary_color"
                        android:textSize="@dimen/subtitle_txt_size"
                        android:fontFamily="@font/euclidsquare_regular"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/transfer_process_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/transfer_stop_card"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_transfer_stop"
                        app:tint="@color/luckycloud_green"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/transfer_file_process"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="center"
                    android:lines="1"
                    android:singleLine="true"
                    android:textColor="@color/text_view_color"
                    android:textSize="@dimen/subtitle_txt_size"
                    android:fontFamily="@font/euclidsquare_regular"/>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/transfer_file_progress_bar"
                android:layout_width="fill_parent"
                android:layout_height="6dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="50dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progress="50"
                android:visibility="gone"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
