<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bottom_bar_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/margin_normal"
    android:paddingHorizontal="@dimen/margin_large">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_button_height"
        android:padding="5dp"
        android:background="@drawable/rounded_searchbar_background"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:background="@null"
            android:src="@drawable/ic_search"/>

        <EditText
            android:id="@+id/et_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:hint="@string/search"
            android:minHeight="35dp"
            android:singleLine="true"
            android:textSize="@dimen/et_txt_size"
            android:textColor="@color/search_foreground"/>

        <ImageButton
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:paddingHorizontal="4dp"
            android:paddingVertical="4dp"
            android:background="@null"
            android:src="@drawable/ic_clear_text"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>