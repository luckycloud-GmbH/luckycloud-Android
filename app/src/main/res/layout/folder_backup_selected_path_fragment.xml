<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/selected_path_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/tv_title_margin_left"
            android:layout_marginVertical="@dimen/tv_title_margin_top"
            android:text="@string/settings_folder_backup_select_title"
            android:textAlignment="center"
            android:textColor="@color/luckycloud_green"
            android:textSize="@dimen/subtopic_txt_size"
            android:lineSpacingMultiplier="@dimen/line_spacing_multiplier"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lv_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/add_backup_folder_card"
            android:layout_width="@dimen/cuc_button_height"
            android:layout_height="@dimen/cuc_button_height"
            android:layout_marginVertical="@dimen/margin_big"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="@color/luckycloud_green"
            app:cardCornerRadius="@dimen/cuc_button_radius"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_add_24"
                app:tint="@color/white" />

<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginVertical="2dp"-->
<!--                android:paddingHorizontal="@dimen/margin_large"-->
<!--                android:background="@drawable/rounded_transfer_button_on"-->
<!--                android:drawablePadding="8dp"-->
<!--                android:text="@string/folder_backup_add"-->
<!--                android:textColor="@color/white"-->
<!--                android:textSize="@dimen/info_txt_size"-->
<!--                android:gravity="center"-->
<!--                android:layout_gravity="center"-->
<!--                app:drawableStartCompat="@drawable/baseline_add_24"-->
<!--                app:drawableTint="@color/white" />-->
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/select_path_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/cuc_local_library_header_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tv_title_margin_top"
            android:layout_gravity="center_horizontal"
            android:text="@string/settings_select_backup_folder_title"
            android:textColor="@color/luckycloud_green"
            android:textSize="@dimen/title_txt_size" />

        <FrameLayout
            android:id="@+id/frameLayout_toolbar_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tv_title_margin_top" />

        <LinearLayout
            android:id="@+id/linl_path_statusbar"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/luckycloud_green"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_tabbar_files_list"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/tabbar_more_card"
                android:layout_width="@dimen/cuc_button_height"
                android:layout_height="@dimen/cuc_button_height"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="@color/luckycloud_green"
                app:cardCornerRadius="@dimen/cuc_button_radius"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_small"
                    android:src="@drawable/ic_action_overflow"
                    app:tint="@color/white" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_files_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/margin_normal"/>

        <LinearLayout
            android:id="@+id/card_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cancel_card"
                android:layout_width="@dimen/cuc_button_width"
                android:layout_height="@dimen/cuc_button_height"
                android:layout_marginRight="20dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/luckycloud_green"
                app:cardCornerRadius="@dimen/cuc_button_radius"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/cancel_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/rounded_cuc_button_off"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textColor="@color/luckycloud_green"
                    android:textSize="@dimen/info_txt_size" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ok_card"
                android:layout_width="@dimen/cuc_button_width"
                android:layout_height="@dimen/cuc_button_height"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/luckycloud_green"
                app:cardCornerRadius="@dimen/cuc_button_radius"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/ok_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/rounded_transfer_button_on"
                    android:gravity="center"
                    android:text="@string/ok"
                    android:textColor="@color/white"
                    android:textSize="@dimen/info_txt_size" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <include
        android:id="@+id/popup_backup_delete_path_layout"
        layout="@layout/popup_backup_delete_path"
        android:visibility="invisible"/>

    <include
        android:id="@+id/item_text_more_layout"
        layout="@layout/item_text_more"
        android:visibility="invisible"/>

    <include
        android:id="@+id/popup_backup_path_more_layout"
        layout="@layout/popup_backup_path_more_layout"
        android:visibility="invisible"/>
</RelativeLayout>