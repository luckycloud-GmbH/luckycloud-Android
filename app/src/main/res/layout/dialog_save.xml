<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/msg_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dialog_msg_card_margin"
        android:text="@string/save_change"
        android:textSize="@dimen/dialog_title_txt_size"
        android:textColor="@color/luckycloud_green"
        android:fontFamily="@font/euclidsquare_semibold"
        android:gravity="center"/>

    <include
        layout="@layout/dialog_button_double"/>

</LinearLayout>