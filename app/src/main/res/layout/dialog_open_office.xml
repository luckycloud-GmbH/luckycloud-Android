<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/msg_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/msg_background"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/close_card"
            android:layout_width="@dimen/share_edit_text_height"
            android:layout_height="@dimen/share_edit_text_height"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_gravity="top|right"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/share_edit_text_radius"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/toolbar_action_mode_button_margin"
                android:layout_gravity="center"
                android:src="@drawable/ic_close"
                app:tint="@color/dots_type_grey"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_normal"
            android:padding="@dimen/task_dialog_inner_padding">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/pdf_dialog_title"
                android:textSize="@dimen/dialog_msg_title_txt_size"
                android:textColor="@color/luckycloud_green"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:gravity="center_horizontal"
            android:paddingHorizontal="@dimen/padding_big"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/share_home_card_margin_top"
                android:layout_marginHorizontal="@dimen/margin_normal"
                android:orientation="vertical"
                android:background="@drawable/shadow_share_background">

                <androidx.cardview.widget.CardView
                    android:id="@+id/onlyoffice_app_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/padding_small"
                        android:paddingTop="@dimen/padding_normal"
                        android:paddingBottom="@dimen/padding_small"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/lv_icon_height2"
                            android:paddingVertical="@dimen/padding_small"
                            android:src="@drawable/ic_onlyoffice"
                            android:scaleType="centerInside"
                            android:layout_marginBottom="@dimen/padding_small"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/onlyoffice_app"
                            android:textSize="@dimen/subinfo_txt_size"
                            android:fontFamily="@font/euclidsquare_semibold"
                            android:textColor="@color/luckycloud_green" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:gravity="center_horizontal"
            android:paddingHorizontal="@dimen/padding_big"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/share_home_card_margin_top"
                android:orientation="vertical"
                android:background="@drawable/shadow_share_background">

                <androidx.cardview.widget.CardView
                    android:id="@+id/in_app_office_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/padding_small"
                        android:paddingTop="@dimen/padding_normal"
                        android:paddingBottom="@dimen/padding_small"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/in_app_office_image"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/lv_icon_height2"
                            android:src="@drawable/file_ms_word"
                            android:scaleType="fitCenter"
                            android:layout_marginBottom="@dimen/padding_small"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/in_app_office"
                            android:textSize="@dimen/subinfo_txt_size"
                            android:fontFamily="@font/euclidsquare_semibold"
                            android:textColor="@color/luckycloud_green" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <View
                android:layout_width="@dimen/margin_large"
                android:layout_height="0dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/share_home_card_margin_top"
                android:orientation="vertical"
                android:background="@drawable/shadow_share_background">

                <androidx.cardview.widget.CardView
                    android:id="@+id/external_app_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/padding_small"
                        android:paddingTop="@dimen/padding_normal"
                        android:paddingBottom="@dimen/padding_small"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/lv_icon_height2"
                            android:src="@drawable/playstore"
                            android:scaleType="centerInside"
                            android:layout_marginBottom="@dimen/padding_small"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/external_app"
                            android:textSize="@dimen/subinfo_txt_size"
                            android:fontFamily="@font/euclidsquare_semibold"
                            android:textColor="@color/luckycloud_green" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dialog_button_border" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:padding="@dimen/task_dialog_inner_padding">

            <TextView
                android:id="@+id/use_ocr_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/task_dialog_content_margin_horizontal"
                android:text="@string/select_default_action"
                android:textAlignment="center"
                android:lineSpacingExtra="@dimen/task_dialog_content_line_spacing"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/task_dialog_inner_padding">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/task_dialog_content_margin_horizontal"
                android:layout_marginBottom="@dimen/margin_big"
                android:text="@string/can_change_later_description_office"
                android:textSize="@dimen/dialog_description_change_later"
                android:lineSpacingExtra="@dimen/task_dialog_content_line_spacing"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/task_dialog_content_margin_horizontal"
                android:text="@string/can_change_later_hint_office"
                android:textSize="@dimen/dialog_description_change_later"
                android:lineSpacingExtra="@dimen/task_dialog_content_line_spacing"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/open_office_card"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/share_edit_text_height"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginBottom="@dimen/margin_largest"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/dots_type_grey_with_opacity"
            app:cardCornerRadius="@dimen/share_edit_text_radius"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="end|center_vertical">

                <TextView
                    android:id="@+id/execute_ocr_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/share_edit_text_height"
                    android:layout_marginLeft="@dimen/margin_big"
                    android:gravity="center"
                    android:text="@string/optional"
                    android:textColor="@color/white"
                    android:textSize="@dimen/subtitle_txt_size" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_big"
                    android:src="@drawable/ic_down"
                    app:tint="@color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <include
        android:id="@+id/popup_open_office_layout"
        layout="@layout/popup_open_office"
        android:visibility="invisible"/>
</RelativeLayout>
