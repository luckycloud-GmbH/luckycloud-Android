<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentPanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/margin_large"
    android:layout_marginEnd="8dip"
    android:layout_marginStart="8dip"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_share_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/share_edit_text_height"
                android:layout_marginTop="@dimen/dialog_msg_background_radius"
                android:paddingHorizontal="@dimen/padding_small"
                android:textSize="@dimen/dialog_msg_title_txt_size"
                android:textColor="@color/luckycloud_green"
                android:textAlignment="center"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/close_card"
                android:layout_width="@dimen/share_edit_text_height"
                android:layout_height="@dimen/share_edit_text_height"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_gravity="top"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="@dimen/share_edit_text_radius"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/toolbar_action_mode_button_margin"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_close"
                    app:tint="@color/dots_type_grey"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                layout="@layout/search_text" />

        </LinearLayout>

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dialog_msg_background_radius"
            android:background="@color/dialog_msg_background"
            android:cacheColorHint="#00000000"
            android:fadingEdge="none"
            android:fastScrollEnabled="true"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:smoothScrollbar="true"
            android:divider="@color/settings_divider"/>
    </LinearLayout>

</LinearLayout>
