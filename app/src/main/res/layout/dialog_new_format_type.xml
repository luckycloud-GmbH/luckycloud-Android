<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/msg_background"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/close_card"
        android:layout_width="@dimen/share_edit_text_height"
        android:layout_height="@dimen/share_edit_text_height"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_gravity="top|right"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="@dimen/share_edit_text_radius"
        app:cardElevation="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/toolbar_action_mode_button_margin"
            android:layout_gravity="center"
            android:src="@drawable/ic_close"
            app:tint="@color/dots_type_grey"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/padding_big"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/share_home_card_margin_top"
            android:orientation="vertical"
            android:background="@drawable/shadow_share_background">

            <androidx.cardview.widget.CardView
                android:id="@+id/file_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/padding_small"
                    android:paddingTop="@dimen/padding_normal"
                    android:paddingBottom="@dimen/padding_small"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="@dimen/repo_item_icon_width2"
                        android:layout_height="@dimen/lv_icon_height2"
                        android:background="@drawable/ic_file"
                        android:gravity="bottom|end"
                        android:paddingHorizontal="@dimen/padding_small"
                        android:paddingVertical="@dimen/padding_small"
                        android:layout_marginBottom="@dimen/padding_small">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:scaleType="fitEnd"
                            android:layout_gravity="bottom"
                            android:visibility="gone"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/subinfo_txt_size"
                            android:textColor="@color/white"
                            android:visibility="gone"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/file"
                        android:textSize="@dimen/subinfo_txt_size"
                        android:fontFamily="@font/euclidsquare_semibold"
                        android:textColor="@color/luckycloud_green" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        
        <View
            android:layout_width="@dimen/margin_big"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/share_home_card_margin_top"
            android:orientation="vertical"
            android:background="@drawable/shadow_share_background">

            <androidx.cardview.widget.CardView
                android:id="@+id/txt_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/padding_small"
                    android:paddingTop="@dimen/padding_normal"
                    android:paddingBottom="@dimen/padding_small"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="@dimen/repo_item_icon_width2"
                        android:layout_height="@dimen/lv_icon_height2"
                        android:background="@drawable/ic_file"
                        android:gravity="bottom|end"
                        android:paddingHorizontal="@dimen/padding_small"
                        android:paddingVertical="@dimen/padding_small"
                        android:layout_marginBottom="@dimen/padding_small">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:scaleType="fitEnd"
                            android:layout_gravity="bottom"
                            android:visibility="gone"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=".txt"
                            android:textSize="@dimen/subinfo_txt_size"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text"
                        android:textSize="@dimen/subinfo_txt_size"
                        android:fontFamily="@font/euclidsquare_semibold"
                        android:textColor="@color/luckycloud_green" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <View
            android:layout_width="@dimen/margin_big"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/share_home_card_margin_top"
            android:orientation="vertical"
            android:background="@drawable/shadow_share_background">

            <androidx.cardview.widget.CardView
                android:id="@+id/md_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/padding_small"
                    android:paddingTop="@dimen/padding_normal"
                    android:paddingBottom="@dimen/padding_small"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="@dimen/repo_item_icon_width2"
                        android:layout_height="@dimen/lv_icon_height2"
                        android:background="@drawable/ic_file"
                        android:gravity="bottom|end"
                        android:paddingHorizontal="@dimen/padding_small"
                        android:paddingVertical="@dimen/padding_small"
                        android:layout_marginBottom="@dimen/padding_small">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:scaleType="fitEnd"
                            android:layout_gravity="bottom"
                            android:visibility="gone"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=".md"
                            android:textSize="@dimen/subinfo_txt_size"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/markdown"
                        android:textSize="@dimen/subinfo_txt_size"
                        android:fontFamily="@font/euclidsquare_semibold"
                        android:textColor="@color/luckycloud_green" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/padding_big"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/share_home_card_margin_top"
            android:orientation="vertical"
            android:background="@drawable/shadow_share_background">

            <androidx.cardview.widget.CardView
                android:id="@+id/word_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/padding_small"
                    android:paddingTop="@dimen/padding_normal"
                    android:paddingBottom="@dimen/padding_small"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/lv_icon_height2"
                        android:src="@drawable/file_ms_word"
                        android:scaleType="center"
                        android:layout_marginBottom="@dimen/padding_small"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word"
                        android:textSize="@dimen/subinfo_txt_size"
                        android:fontFamily="@font/euclidsquare_semibold"
                        android:textColor="@color/luckycloud_green" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <View
            android:layout_width="@dimen/margin_big"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/share_home_card_margin_top"
            android:orientation="vertical"
            android:background="@drawable/shadow_share_background">

            <androidx.cardview.widget.CardView
                android:id="@+id/excel_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/padding_small"
                    android:paddingTop="@dimen/padding_normal"
                    android:paddingBottom="@dimen/padding_small"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/lv_icon_height2"
                        android:src="@drawable/file_ms_excel"
                        android:scaleType="center"
                        android:layout_marginBottom="@dimen/padding_small"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/excel"
                        android:textSize="@dimen/subinfo_txt_size"
                        android:fontFamily="@font/euclidsquare_semibold"
                        android:textColor="@color/luckycloud_green" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <View
            android:layout_width="@dimen/margin_big"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/share_home_card_margin_top"
            android:orientation="vertical"
            android:background="@drawable/shadow_share_background">

            <androidx.cardview.widget.CardView
                android:id="@+id/ppt_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/padding_small"
                    android:paddingTop="@dimen/padding_normal"
                    android:paddingBottom="@dimen/padding_small"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/lv_icon_height2"
                        android:src="@drawable/file_ms_ppt"
                        android:scaleType="center"
                        android:layout_marginBottom="@dimen/padding_small"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/powerpoint"
                        android:textSize="@dimen/subinfo_txt_size"
                        android:fontFamily="@font/euclidsquare_semibold"
                        android:textColor="@color/luckycloud_green" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
