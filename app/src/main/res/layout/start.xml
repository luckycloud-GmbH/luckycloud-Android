    <!--        android:layout_width="128dp"-->
    <!--        android:layout_height="128dp"-->
    <!--        android:layout_marginTop="@dimen/tv_title_margin_top"-->
    <!--        android:scaleType="fitStart"-->
    <!--        android:src="@drawable/ic_luckycloud_wortbildmarke_skaliert"-->
    <!--        android:layout_gravity="center"/>-->

    <ImageView
        android:id="@+id/icon"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:src="@drawable/ic_luckycloud_wortbildmarke"
        app:tint="@color/gesture_foreground"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnGoLogin"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_below="@+id/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="50dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/lucky_black"
        app:cardCornerRadius="22dp"
        app:cardElevation="0dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="50dp"
            android:gravity="center"
            android:text="@string/add_account"
            android:textColor="@color/luckycloud_green" />
    </androidx.cardview.widget.CardView>

    <GridView
        android:id="@+id/account_list_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/btnGoNewAccount"
        android:layout_below="@+id/btnGoLogin"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:layout_marginTop="30dp"
        android:numColumns="1"
        android:scrollbarSize="0dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnGoNewAccount"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/data_privacy_text"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="30dp"
        android:layout_marginEnd="30dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_plus"
            app:tint="@color/gesture_foreground" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/data_privacy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/data_privacy"
        android:textColor="@color/luckycloud_green"
        android:textSize="@dimen/subtitle_txt_size" />

</RelativeLayout>