<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:paddingHorizontal="@dimen/padding_normal"
    android:background="@color/bottom_bar_background">

    <TextView
        android:id="@+id/toolbar_title_library"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:textColor="@color/text_view_color"
        android:textSize="@dimen/subtopic_txt_size"
        android:singleLine="true"
        android:ellipsize="start"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/back_menu_card"
            android:layout_width="@dimen/top_menu_button_width"
            android:layout_height="@dimen/top_menu_button_width"
            android:layout_marginStart="0dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="visible"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/top_menu_button_radius"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/top_menu_button_margin2"
                android:layout_gravity="center"
                android:src="@drawable/ic_home_up_btn" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/personal_menu_card"
            android:layout_width="@dimen/top_menu_button_width"
            android:layout_height="@dimen/top_menu_button_width"
            android:layout_marginStart="0dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="visible"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/top_menu_button_radius"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/personal_menu_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/top_menu_button_margin1"
                android:layout_gravity="center"
                android:src="@drawable/ic_personal" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/group_menu_card"
            android:layout_width="@dimen/top_menu_button_width"
            android:layout_height="@dimen/top_menu_button_width"
            android:layout_marginStart="0dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="visible"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/top_menu_button_radius"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/group_menu_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/top_menu_button_margin1"
                android:layout_gravity="center"
                android:src="@drawable/ic_group" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/shared_menu_card"
            android:layout_width="@dimen/top_menu_button_width"
            android:layout_height="@dimen/top_menu_button_width"
            android:layout_marginStart="0dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="visible"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/top_menu_button_radius"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/shared_menu_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/top_menu_button_margin1"
                android:layout_gravity="center"
                android:src="@drawable/ic_shared" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/toolbar_title_not_library"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_view_color"
            android:textSize="@dimen/subtopic_txt_size"
            android:text=""
            android:singleLine="true"
            android:ellipsize="start"
            android:gravity="start|center_vertical"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/grid_menu_card"
            android:layout_width="@dimen/top_menu_button_width"
            android:layout_height="@dimen/top_menu_button_width"
            android:layout_marginStart="0dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="visible"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/top_menu_button_radius"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/grid_menu_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/top_menu_button_margin2"
                android:layout_gravity="center"
                android:src="@drawable/ic_list" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/overflow_menu_card"
            android:layout_width="@dimen/top_menu_button_width"
            android:layout_height="@dimen/top_menu_button_width"
            android:layout_marginStart="0dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="visible"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/top_menu_button_radius"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/top_menu_button_margin2"
                android:layout_gravity="center"
                android:src="@drawable/ic_action_overflow" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>
