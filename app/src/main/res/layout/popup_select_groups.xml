<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:layout_marginTop="?actionBarSize"
    android:layout_marginBottom="@dimen/margin_normal"
    android:background="@drawable/popup_background">

    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/field"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="0dp">

        <include
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            layout="@layout/search_text2" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_search"
            android:layout_width="@dimen/share_edit_text_height"
            android:layout_height="@dimen/share_edit_text_height"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/luckycloud_green"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/share_edit_text_radius"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_search"
                app:tint="@color/white" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/double_card_layout"
        android:layout_below="@+id/search_layout"
        android:layout_marginBottom="0dp"
        android:cacheColorHint="#00000000"
        android:fadingEdge="none"
        android:fastScrollEnabled="true"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true"
        android:scrollbars="none"
        android:divider="@color/settings_divider"
        android:dividerHeight="1dp"/>

    <LinearLayout
        android:id="@+id/progress_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="@dimen/normal_progress_logo_width"
        android:layout_below="@+id/search_layout"
        android:layout_above="@+id/double_card_layout"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            style="@style/loading"
            android:layout_width="@dimen/normal_progress_logo_width"
            android:layout_height="@dimen/normal_progress_logo_width" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dip"
            android:singleLine="true"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/double_card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/rounded_popup_bottom2"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_popup_bottom_left"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/cancel_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="visible"
                app:cardBackgroundColor="@color/popup_background"
                app:cardCornerRadius="@dimen/dialog_msg_background_radius"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/cancel_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/dialog_msg_background_radius"
                    android:layout_marginVertical="@dimen/margin_normal"
                    android:fontFamily="@font/euclidsquare_regular"
                    android:text="@string/cancel"
                    android:textColor="@color/text_view_color"
                    android:textSize="@dimen/info_txt_size" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_popup_bottom_right"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/ok_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="visible"
                app:cardBackgroundColor="@color/popup_background"
                app:cardCornerRadius="@dimen/dialog_msg_background_radius"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/ok_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/dialog_msg_background_radius"
                    android:layout_marginVertical="@dimen/margin_normal"
                    android:fontFamily="@font/euclidsquare_regular"
                    android:text="@string/save"
                    android:textColor="@color/text_view_color"
                    android:textSize="@dimen/info_txt_size" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>