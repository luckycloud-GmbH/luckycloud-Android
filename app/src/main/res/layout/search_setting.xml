<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:paddingBottom="@dimen/padding_big"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_big"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/location_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_big"
                android:background="@null"
                android:thumb="@drawable/custom_switch_thumb_selector"
                app:track="@drawable/custom_switch_track_selector"
                android:checked="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:textSize="@dimen/subtitle_txt_size"/>
        </LinearLayout>

        <RadioGroup
            android:id="@+id/location_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_larger"
            android:layout_marginTop="@dimen/margin_largest">

            <RadioButton
                android:id="@+id/search_all_libraries_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/rounded_radio_share"
                android:paddingStart="@dimen/margin_normal"
                android:text="@string/search_all_libraries"
                android:textColor="@color/text_view_color"
                android:textSize="@dimen/info_txt_size"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/search_current_library_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:button="@drawable/rounded_radio_share"
                android:paddingStart="@dimen/margin_normal"
                android:text="@string/search_current_library"
                android:textColor="@color/text_view_color"
                android:textSize="@dimen/info_txt_size" />

            <RadioButton
                android:id="@+id/search_current_folder_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:button="@drawable/rounded_radio_share"
                android:paddingStart="@dimen/margin_normal"
                android:text="@string/search_current_folder"
                android:textColor="@color/text_view_color"
                android:textSize="@dimen/info_txt_size" />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_big"
            android:background="@color/field" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_big"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/all_file_types_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_big"
                android:background="@null"
                android:thumb="@drawable/custom_switch_thumb_selector"
                app:track="@drawable/custom_switch_track_selector" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/all_file_types"
                android:textSize="@dimen/subtitle_txt_size"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_big"
            android:background="@color/field" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_big"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/custom_file_types_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_big"
                android:background="@null"
                android:thumb="@drawable/custom_switch_thumb_selector"
                app:track="@drawable/custom_switch_track_selector"
                android:checked="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/custom_file_types"
                android:textSize="@dimen/subtitle_txt_size"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/custom_file_types_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/margin_large">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/image_checkbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/margin_normal"
                        android:layout_marginTop="@dimen/margin_largest"
                        android:button="@drawable/rounded_checkbox_share"
                        android:text="@string/image"
                        android:textSize="@dimen/info_txt_size"
                        android:textColor="@color/text_view_color"/>

                    <CheckBox
                        android:id="@+id/pdf_checkbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/margin_normal"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:button="@drawable/rounded_checkbox_share"
                        android:text="@string/pdf"
                        android:textSize="@dimen/info_txt_size"
                        android:textColor="@color/text_view_color"/>

                    <CheckBox
                        android:id="@+id/video_checkbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/margin_normal"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:button="@drawable/rounded_checkbox_share"
                        android:text="@string/video"
                        android:textSize="@dimen/info_txt_size"
                        android:textColor="@color/text_view_color"/>

                    <CheckBox
                        android:id="@+id/markdown_checkbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/margin_normal"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:button="@drawable/rounded_checkbox_share"
                        android:text="@string/markdown"
                        android:textSize="@dimen/info_txt_size"
                        android:textColor="@color/text_view_color"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/text_checkbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/margin_normal"
                        android:layout_marginTop="@dimen/margin_largest"
                        android:button="@drawable/rounded_checkbox_share"
                        android:text="@string/text"
                        android:textSize="@dimen/info_txt_size"
                        android:textColor="@color/text_view_color"/>

                    <CheckBox
                        android:id="@+id/audio_checkbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/margin_normal"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:button="@drawable/rounded_checkbox_share"
                        android:text="@string/audio"
                        android:textSize="@dimen/info_txt_size"
                        android:textColor="@color/text_view_color"/>

                    <CheckBox
                        android:id="@+id/document_checkbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/margin_normal"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:button="@drawable/rounded_checkbox_share"
                        android:text="@string/document"
                        android:textSize="@dimen/info_txt_size"
                        android:textColor="@color/text_view_color"/>
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/custom_file_types_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/share_edit_text_height"
                android:layout_marginBottom="@dimen/et_margin_bottom"
                android:background="@drawable/rounded_search_edittext"
                android:ems="10"
                android:hint="@string/enter_file_extensions"
                android:importantForAutofill="auto"
                android:inputType="textEmailAddress"
                android:paddingStart="@dimen/share_edit_text_radius"
                android:paddingEnd="@dimen/share_edit_text_radius"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginStart="@dimen/margin_large"
                android:textColor="@color/account_edit_text_foreground"
                android:textSize="@dimen/subinfo_txt_size"
                android:fontFamily="@font/euclidsquare_medium"
                android:visibility="visible" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_big"
            android:background="@color/field" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_big"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/last_changes_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_big"
                android:background="@null"
                android:thumb="@drawable/custom_switch_thumb_selector"
                app:track="@drawable/custom_switch_track_selector"
                android:checked="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/last_changes"
                android:textSize="@dimen/subtitle_txt_size"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/last_changes_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_largest"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/start_time_layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_search_edittext"
                android:padding="2dp"
                android:paddingStart="@dimen/share_edit_text_radius"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/start_time_edit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="@string/date_format"
                    android:textSize="@dimen/subinfo_txt_size"
                    android:textColor="@color/account_edit_text_foreground"
                    android:gravity="left|center_vertical"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/start_time_card"
                    android:layout_width="@dimen/share_edit_text_height"
                    android:layout_height="@dimen/share_edit_text_height"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/window_background"
                    app:cardCornerRadius="@dimen/share_edit_text_radius"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/margin_normal"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/dots_type_grey_with_opacity" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_horizontal_rule_24"
                app:tint="@color/dots_type_grey_with_opacity" />

            <LinearLayout
                android:id="@+id/end_time_layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_search_edittext"
                android:padding="2dp"
                android:paddingStart="@dimen/share_edit_text_radius"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/end_time_edit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="@string/date_format"
                    android:textSize="@dimen/subinfo_txt_size"
                    android:textColor="@color/account_edit_text_foreground"
                    android:gravity="left|center_vertical"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/end_time_card"
                    android:layout_width="@dimen/share_edit_text_height"
                    android:layout_height="@dimen/share_edit_text_height"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/window_background"
                    app:cardCornerRadius="@dimen/share_edit_text_radius"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/margin_normal"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/dots_type_grey_with_opacity" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_big"
            android:background="@color/field" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_big"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/size_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_big"
                android:background="@null"
                android:thumb="@drawable/custom_switch_thumb_selector"
                app:track="@drawable/custom_switch_track_selector"
                android:checked="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/size"
                android:textSize="@dimen/subtitle_txt_size"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/size_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_largest"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/min_size_layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/rounded_search_edittext">

                <EditText
                    android:id="@+id/min_size_edit"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/share_edit_text_height"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_edittext_share2"
                    android:ems="10"
                    android:fontFamily="@font/euclidsquare_medium"
                    android:importantForAutofill="auto"
                    android:inputType="number"
                    android:paddingStart="@dimen/share_edit_text_radius"
                    android:paddingEnd="@dimen/share_edit_text_radius"
                    android:text=""
                    android:textColor="@color/text_view_secondary_color"
                    android:textSize="@dimen/info_txt_size" />

                <FrameLayout
                    android:layout_width="85dp"
                    android:layout_height="@dimen/share_edit_text_height"
                    android:layout_marginEnd="-20dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/min_size_unit_card"
                        android:layout_width="85dp"
                        android:layout_height="@dimen/share_edit_text_height"
                        android:layout_marginLeft="-20dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/dots_type_grey_with_opacity"
                        app:cardCornerRadius="@dimen/share_edit_text_radius"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginStart="20dp"
                            android:gravity="end|center_vertical">

                            <TextView
                                android:id="@+id/min_size_unit_text"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/share_edit_text_height"
                                android:gravity="center"
                                android:text="@string/unit_mb"
                                android:textColor="@color/white"
                                android:textSize="@dimen/info_txt_size" />

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:layout_marginRight="@dimen/margin_big"
                                android:src="@drawable/ic_down"
                                app:tint="@color/white" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                </FrameLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_horizontal_rule_24"
                app:tint="@color/dots_type_grey_with_opacity" />

            <LinearLayout
                android:id="@+id/max_size_layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/rounded_search_edittext">

                <EditText
                    android:id="@+id/max_size_edit"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/share_edit_text_height"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_edittext_share2"
                    android:ems="10"
                    android:fontFamily="@font/euclidsquare_medium"
                    android:importantForAutofill="auto"
                    android:inputType="number"
                    android:paddingStart="@dimen/share_edit_text_radius"
                    android:paddingEnd="@dimen/share_edit_text_radius"
                    android:text=""
                    android:textColor="@color/text_view_secondary_color"
                    android:textSize="@dimen/info_txt_size" />

                <FrameLayout
                    android:layout_width="85dp"
                    android:layout_height="@dimen/share_edit_text_height"
                    android:layout_marginEnd="-20dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/max_size_unit_card"
                        android:layout_width="85dp"
                        android:layout_height="@dimen/share_edit_text_height"
                        android:layout_marginLeft="-20dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/dots_type_grey_with_opacity"
                        app:cardCornerRadius="@dimen/share_edit_text_radius"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginStart="20dp"
                            android:gravity="center_vertical|end">

                            <TextView
                                android:id="@+id/max_size_unit_text"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/share_edit_text_height"
                                android:gravity="center"
                                android:text="@string/unit_mb"
                                android:textColor="@color/white"
                                android:textSize="@dimen/info_txt_size" />

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:layout_marginRight="@dimen/margin_big"
                                android:src="@drawable/ic_down"
                                app:tint="@color/white" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>