<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/share_copy_link_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_msg_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/link_with_colon"
            android:textSize="@dimen/info_txt_size"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/link_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <EditText
                    android:id="@+id/link_text"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/share_edit_text_height"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_edittext_share2"
                    android:ems="10"
                    android:fontFamily="@font/euclidsquare_medium"
                    android:importantForAutofill="auto"
                    android:inputType="number"
                    android:paddingStart="@dimen/share_edit_text_radius"
                    android:paddingEnd="@dimen/share_edit_text_radius"
                    android:textColor="@color/text_view_secondary_color"
                    android:textSize="@dimen/info_txt_size"
                    android:clickable="false"
                    android:focusable="false"
                    android:cursorVisible="false"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/copy_link_card"
                    android:layout_width="@dimen/share_edit_text_height"
                    android:layout_height="@dimen/share_edit_text_height"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/dots_type_grey_with_opacity"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@id/sort_by_text"
                        android:layout_alignBottom="@+id/sort_by_text"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:src="@drawable/ic_copy"
                        app:tint="@color/white" />
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/share_edit_text_height"
                    android:background="@color/background_light_with_opacity" />

                <FrameLayout
                    android:layout_width="54dp"
                    android:layout_height="@dimen/share_edit_text_height"
                    android:layout_marginEnd="@dimen/share_edit_minus_margin">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/select_link_card"
                        android:layout_width="54dp"
                        android:layout_height="@dimen/share_edit_text_height"
                        android:layout_marginLeft="@dimen/share_edit_minus_margin"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/dots_type_grey_with_opacity"
                        app:cardCornerRadius="@dimen/share_edit_text_radius"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_alignTop="@id/sort_by_text"
                            android:layout_alignBottom="@+id/sort_by_text"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:src="@drawable/ic_down"
                            app:tint="@color/white" />
                    </androidx.cardview.widget.CardView>
                </FrameLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/qr_card"
                android:layout_width="@dimen/share_edit_text_height"
                android:layout_height="@dimen/share_edit_text_height"
                android:layout_marginLeft="@dimen/margin_large"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/dots_type_grey_with_opacity"
                app:cardCornerRadius="@dimen/share_edit_text_radius"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@id/sort_by_text"
                    android:layout_alignBottom="@+id/sort_by_text"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:src="@drawable/qr"
                    app:tint="@color/white" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/current_password_caption_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/password_with_colon"
            android:textSize="@dimen/info_txt_size"/>

        <LinearLayout
            android:id="@+id/current_password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/current_password_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Password"
                android:textSize="@dimen/info_txt_size"
                android:textColor="@color/text_view_secondary_color"/>

            <ImageView
                android:id="@+id/show_current_password_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/current_password_edit"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_eye_close"
                app:tint="@color/text_view_secondary_color"
                android:visibility="visible"/>
        </LinearLayout>

        <TextView
            android:id="@+id/current_expiration_caption_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/expiration_date_with_colon"
            android:textSize="@dimen/info_txt_size"/>

        <LinearLayout
            android:id="@+id/current_expiration_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/current_expiration_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Expiration Date"
                android:textSize="@dimen/info_txt_size"
                android:textColor="@color/text_view_secondary_color"/>

            <ImageView
                android:id="@+id/edit_expiration_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit"
                app:tint="@color/text_view_secondary_color"
                android:visibility="visible"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/update_expiration_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/update_auto_expiration_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginStart="@dimen/margin_normal">

                <RadioButton
                    android:id="@+id/update_expiration_days_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/margin_normal"
                    android:button="@drawable/rounded_checkbox_share"
                    android:textColor="@color/text_view_color"
                    android:text="@string/expiration_days"
                    android:textSize="@dimen/info_txt_size"/>

                <LinearLayout
                    android:id="@+id/update_expiration_days_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/update_expiration_days_edit"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/share_edit_text_height"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_edittext_share2"
                        android:ems="10"
                        android:fontFamily="@font/euclidsquare_medium"
                        android:importantForAutofill="auto"
                        android:inputType="number"
                        android:paddingStart="@dimen/share_edit_text_radius"
                        android:paddingEnd="@dimen/share_edit_text_radius"
                        android:textColor="@color/text_view_secondary_color"
                        android:textSize="@dimen/info_txt_size"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="54dp"
                        android:layout_height="@dimen/share_edit_text_height"
                        android:paddingHorizontal="@dimen/margin_normal"
                        android:background="@drawable/rounded_textview_share2"
                        android:text="@string/days"
                        android:textSize="@dimen/info_txt_size"
                        android:textColor="@color/white"
                        android:gravity="center"/>
                </LinearLayout>

                <RadioButton
                    android:id="@+id/update_expiration_time_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:paddingStart="@dimen/margin_normal"
                    android:button="@drawable/rounded_checkbox_share"
                    android:textColor="@color/text_view_color"
                    android:text="@string/expiration_time"
                    android:textSize="@dimen/info_txt_size"/>

                <LinearLayout
                    android:id="@+id/update_expiration_time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/update_expiration_time_edit"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/share_edit_text_height"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_edittext_share2"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:ems="10"
                        android:focusable="false"
                        android:fontFamily="@font/euclidsquare_medium"
                        android:importantForAutofill="auto"
                        android:inputType="number"
                        android:paddingStart="@dimen/share_edit_text_radius"
                        android:paddingEnd="@dimen/share_edit_text_radius"
                        android:text=""
                        android:textColor="@color/text_view_secondary_color"
                        android:textSize="@dimen/info_txt_size" />

                    <FrameLayout
                        android:layout_width="72dp"
                        android:layout_height="@dimen/share_edit_text_height"
                        android:layout_marginEnd="@dimen/share_edit_minus_margin">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/update_expiration_time_card"
                            android:layout_width="72dp"
                            android:layout_height="@dimen/share_edit_text_height"
                            android:layout_marginLeft="@dimen/share_edit_minus_margin"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardBackgroundColor="@color/dots_type_grey_with_opacity"
                            app:cardCornerRadius="@dimen/share_edit_text_radius"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignTop="@id/sort_by_text"
                                android:layout_alignBottom="@+id/sort_by_text"
                                android:layout_alignParentStart="true"
                                android:layout_gravity="center"
                                android:layout_marginLeft="6dp"
                                android:layout_marginVertical="@dimen/margin_small"
                                android:src="@drawable/ic_calendar"
                                app:tint="@color/white" />
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>
                </LinearLayout>
            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/update_expiration_card"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/share_edit_text_height"
                    app:cardCornerRadius="@dimen/share_edit_text_radius"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/luckycloud_green"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:text="@string/update"
                        android:textSize="@dimen/info_txt_size"
                        android:textColor="@color/white"
                        android:background="@drawable/rounded_transfer_button_on"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cancel_expiration_card"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/share_edit_text_height"
                    app:cardCornerRadius="@dimen/share_edit_text_radius"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/luckycloud_green"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:text="@string/cancel"
                        android:textSize="@dimen/info_txt_size"
                        android:textColor="@color/luckycloud_green"
                        android:background="@drawable/rounded_share_cancel_button"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/update_permission_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                android:text="@string/set_permission"
                android:textSize="@dimen/info_txt_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/update_permission_text"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/share_edit_text_height"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_edittext_share2"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"
                    android:fontFamily="@font/euclidsquare_medium"
                    android:importantForAutofill="auto"
                    android:inputType="number"
                    android:paddingStart="@dimen/share_edit_text_radius"
                    android:paddingEnd="@dimen/share_edit_text_radius"
                    android:textColor="@color/text_view_secondary_color"
                    android:textSize="@dimen/info_txt_size" />

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="@dimen/share_edit_text_height"
                    android:layout_marginEnd="@dimen/share_edit_minus_margin">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/update_permission_card"
                        android:layout_width="50dp"
                        android:layout_height="@dimen/share_edit_text_height"
                        android:layout_marginLeft="@dimen/share_edit_minus_margin"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/dots_type_grey_with_opacity"
                        app:cardCornerRadius="@dimen/share_edit_text_radius"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_alignTop="@id/sort_by_text"
                            android:layout_alignBottom="@+id/sort_by_text"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:src="@drawable/ic_down"
                            app:tint="@color/white" />
                    </androidx.cardview.widget.CardView>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/send_card"
                android:layout_width="100dp"
                android:layout_height="@dimen/share_edit_text_height"
                app:cardCornerRadius="@dimen/share_edit_text_radius"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/luckycloud_green"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:text="@string/send"
                    android:textSize="@dimen/info_txt_size"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_transfer_button_on"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/delete_card"
                android:layout_width="100dp"
                android:layout_height="@dimen/share_edit_text_height"
                app:cardCornerRadius="@dimen/share_edit_text_radius"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/luckycloud_green"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:text="@string/delete"
                    android:textSize="@dimen/info_txt_size"
                    android:textColor="@color/luckycloud_green"
                    android:background="@drawable/rounded_share_cancel_button"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
