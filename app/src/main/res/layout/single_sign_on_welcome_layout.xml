<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_actionbar" /><!-- placeholder, empty except on L -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_larger"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/edit_text_container_side_padding"
        android:paddingBottom="10dp">

        <EditText
            android:id="@+id/single_sign_on_server_url_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_container_diameter"
            android:layout_marginBottom="@dimen/et_margin_bottom"
            android:background="@drawable/rounded_account_edittext"
            android:ems="10"
            android:fontFamily="@font/euclidsquare_medium"
            android:hint="@string/server_hint"
            android:importantForAutofill="auto"
            android:inputType="textUri"
            android:paddingStart="@dimen/edit_text_container_radius"
            android:paddingEnd="@dimen/edit_text_container_diameter"
            android:textColor="@color/account_edit_text_foreground" />

        <Button
            android:id="@+id/single_sign_on_next_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_container_diameter"
            android:layout_marginLeft="@dimen/long_btn_margin_left"
            android:layout_marginTop="30dp"
            android:layout_marginRight="@dimen/long_btn_margin_right"
            android:background="@drawable/rounded_button"
            android:onClick="login"
            android:paddingTop="@dimen/long_btn_padding_top"
            android:paddingBottom="@dimen/long_btn_padding_bottom"
            android:text="@string/lockpattern_continue_button_text"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>