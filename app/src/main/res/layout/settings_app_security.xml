<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:paddingVertical="@dimen/margin_normal"
        android:paddingHorizontal="@dimen/dialog_op_file_item_padding_horizontal"
        android:background="@drawable/msg_background">

        <LinearLayout
            android:id="@+id/app_security_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dialog_op_file_item_padding_vertical"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/settings_icon_width"
                android:layout_height="@dimen/settings_icon_width"
                android:layout_marginRight="@dimen/settings_icon_margin_left"
                android:src="@drawable/ic_key"
                app:tint="@color/luckycloud_green" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/app_security"
                android:textSize="@dimen/topic_txt_size"/>

            <ImageView
                android:id="@+id/app_security_direction_image"
                android:layout_width="@dimen/settings_direction_width"
                android:layout_height="@dimen/settings_direction_width"
                android:src="@drawable/ic_left"
                app:tint="@color/luckycloud_green" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/app_security_collapse_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_big"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/gesture_lock_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dialog_op_file_item_padding_vertical"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/gesture_lock"
                        android:layout_marginRight="@dimen/margin_big"
                        android:fontFamily="@font/euclidsquare_regular"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/gesture_lock_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:thumb="@drawable/custom_switch_thumb_selector"
                            app:track="@drawable/custom_switch_track_selector"/>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/gesture_lock_card"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="0dp"
                            android:visibility="visible">

                            <androidx.appcompat.widget.SwitchCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:thumb="@drawable/custom_switch_thumb_selector"
                                app:track="@drawable/custom_switch_track_selector"
                                android:visibility="invisible"/>
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/settings_divider"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/biometric_auth_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dialog_op_file_item_padding_vertical"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/biometric_auth"
                        android:layout_marginRight="@dimen/margin_big"
                        android:fontFamily="@font/euclidsquare_regular"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/biometric_auth_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:thumb="@drawable/custom_switch_thumb_selector"
                            app:track="@drawable/custom_switch_track_selector"/>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/biometric_auth_card"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="0dp"
                            android:visibility="visible">

                            <androidx.appcompat.widget.SwitchCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:thumb="@drawable/custom_switch_thumb_selector"
                                app:track="@drawable/custom_switch_track_selector"
                                android:visibility="invisible"/>
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gesture_biometric_service_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/settings_divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dialog_op_file_item_padding_vertical"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/when_back"
                            android:layout_marginEnd="@dimen/margin_big"
                            android:lineSpacingExtra="@dimen/padding_small"
                            android:fontFamily="@font/euclidsquare_regular"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/when_back_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:thumb="@drawable/custom_switch_thumb_selector"
                            app:track="@drawable/custom_switch_track_selector" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/settings_divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dialog_op_file_item_padding_vertical"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/when_home"
                            android:layout_marginRight="@dimen/margin_big"
                            android:fontFamily="@font/euclidsquare_regular"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/when_home_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:thumb="@drawable/custom_switch_thumb_selector"
                            app:track="@drawable/custom_switch_track_selector" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/settings_divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dialog_op_file_item_padding_vertical"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/when_device_lock"
                            android:layout_marginRight="@dimen/margin_big"
                            android:fontFamily="@font/euclidsquare_regular"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/when_device_lock_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:thumb="@drawable/custom_switch_thumb_selector"
                            app:track="@drawable/custom_switch_track_selector" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/settings_divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dialog_op_file_item_padding_vertical"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/expiration_time"
                            android:layout_marginEnd="@dimen/margin_large"
                            android:fontFamily="@font/euclidsquare_regular"/>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/expiration_time_card"
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardBackgroundColor="@color/dots_type_grey_with_opacity"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginHorizontal="@dimen/margin_normal"
                                android:gravity="end|center_vertical">

                                <TextView
                                    android:id="@+id/expiration_time_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="30mins"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/info_txt_size" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_down"
                                    android:layout_marginStart="@dimen/margin_small"
                                    app:tint="@color/white" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/clear_library_password_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/dialog_msg_background"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/settings_divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dialog_op_file_item_padding_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/clear_password_title"
                            android:fontFamily="@font/euclidsquare_regular"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/clear_password_hint"
                            android:textSize="@dimen/subtitle_txt_size"
                            android:textColor="@color/text_view_secondary_color"
                            android:fontFamily="@font/euclidsquare_regular"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/settings_divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dialog_op_file_item_padding_vertical"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/clear_password_auto"
                        android:layout_marginRight="@dimen/margin_big"
                        android:fontFamily="@font/euclidsquare_regular"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/auto_clear_password_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:thumb="@drawable/custom_switch_thumb_selector"
                        app:track="@drawable/custom_switch_track_selector" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/exception_encrypted_repo_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/settings_divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dialog_op_file_item_padding_vertical"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/exception_enc_repo"
                            android:layout_marginEnd="@dimen/margin_big"
                            android:lineSpacingExtra="@dimen/padding_small"
                            android:fontFamily="@font/euclidsquare_regular"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/exception_encrypted_repo_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:thumb="@drawable/custom_switch_thumb_selector"
                            app:track="@drawable/custom_switch_track_selector" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/client_encrypt_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/settings_divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dialog_op_file_item_padding_vertical"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/enc_title"
                                android:fontFamily="@font/euclidsquare_regular"
                                android:lineSpacingExtra="@dimen/padding_small"/>

                            <TextView
                                android:id="@+id/client_encrypt_summary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/enc_off"
                                android:textSize="@dimen/subtitle_txt_size"
                                android:textColor="@color/text_view_secondary_color"
                                android:fontFamily="@font/euclidsquare_regular"/>
                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/client_encrypt_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:thumb="@drawable/custom_switch_thumb_selector"
                                app:track="@drawable/custom_switch_track_selector"/>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/client_encrypt_card"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clickable="true"
                                android:focusable="true"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp">

                                <androidx.appcompat.widget.SwitchCompat
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:thumb="@drawable/custom_switch_thumb_selector"
                                    app:track="@drawable/custom_switch_track_selector"
                                    android:visibility="invisible"/>
                            </androidx.cardview.widget.CardView>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>