<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_normal">

    <androidx.cardview.widget.CardView
        android:id="@+id/view_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="@dimen/account_item_radius"
        app:cardBackgroundColor="@color/transparent"
        app:cardElevation="0dp">

        <LinearLayout
            android:id="@+id/view_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_account_background_border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/accounts_item_margin_horizontal"
                android:layout_marginVertical="@dimen/margin_normal"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="0dp">

                    <ImageView
                        android:id="@+id/list_item_account_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:layout_constraintDimensionRatio="1"
                        android:src="@drawable/ic_default_account"
                        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/linearLayout"
                        app:tint="@color/luckycloud_green" />

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toStartOf="@+id/more_card"
                        app:layout_constraintStart_toEndOf="@+id/list_item_account_icon"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/list_item_account_title"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/lv_act_title_height"
                            android:layout_marginTop="@dimen/lv_act_title_margin_top"
                            android:lines="1"
                            android:singleLine="true"
                            android:text="Titel"
                            android:textColor="@color/text_view_color"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/list_item_account_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:lines="1"
                            android:text="Subtitle"
                            android:textColor="@color/luckycloud_green"
                            android:textSize="@dimen/topic_txt_size" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/type_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:foreground="?selectableItemBackground"
                            app:cardBackgroundColor="@color/black"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:id="@+id/type_text"
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="2dp"
                                android:lines="1"
                                android:singleLine="true"
                                android:text="@string/enterprise"
                                android:textAlignment="center"
                                android:textColor="@color/field"
                                android:textSize="@dimen/subtitle_txt_size" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/more_card"
                        android:layout_width="@dimen/share_edit_text_height"
                        android:layout_height="@dimen/share_edit_text_height"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="@dimen/share_edit_text_radius"
                        app:cardElevation="0dp"
                        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/linearLayout">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/margin_small"
                            android:src="@drawable/ic_action_overflow"
                            app:tint="@color/dots_type_grey" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/more_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/linearLayout"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/edit_card"
                            android:layout_width="@dimen/account_edit_icon_width"
                            android:layout_height="@dimen/account_edit_icon_width"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="@dimen/account_edit_icon_radius"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/account_edit_image_margin"
                                android:src="@drawable/ic_edit"
                                app:tint="@color/dots_type_grey" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/delete_card"
                            android:layout_width="@dimen/account_edit_icon_width"
                            android:layout_height="@dimen/account_edit_icon_width"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="@dimen/account_edit_icon_radius"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/account_edit_image_margin"
                                android:src="@drawable/ic_delete"
                                app:tint="@color/dots_type_grey" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/logout_card"
                            android:layout_width="@dimen/account_edit_icon_width"
                            android:layout_height="@dimen/account_edit_icon_width"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="@dimen/account_edit_icon_radius"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/account_edit_image_margin"
                                android:src="@drawable/ic_logout"
                                app:tint="@color/red" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>