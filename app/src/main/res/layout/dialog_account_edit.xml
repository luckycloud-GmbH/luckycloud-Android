<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentPanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/msg_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account"
            android:textSize="@dimen/topic_txt_size"
            android:textColor="@color/luckycloud_green"/>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:text="@string/edit"
            android:textSize="@dimen/topic_txt_size"/>
    </LinearLayout>

    <TextView
        android:id="@+id/info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/task_dialog_content_margin_horizontal"
        android:layout_marginVertical="@dimen/margin_large"
        android:text="@string/account_edit"
        android:textAlignment="center"
        android:lineSpacingExtra="@dimen/task_dialog_content_line_spacing"/>

    <LinearLayout
        android:id="@+id/double_card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:background="@drawable/rounded_dialog_bottom2"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:background="@drawable/rounded_dialog_bottom_left"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/cancel_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/dialog_msg_background"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/dialog_msg_background_radius"
                android:visibility="visible">

                <TextView
                    android:id="@+id/cancel_text"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:layout_marginHorizontal="@dimen/dialog_msg_background_radius"
                    android:layout_marginVertical="@dimen/margin_big"
                    android:layout_gravity="center"
                    android:text="@string/cancel"
                    android:textSize="@dimen/title_txt_size"
                    android:textColor="@color/luckycloud_green"
                    android:fontFamily="@font/euclidsquare_regular"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:background="@drawable/rounded_dialog_bottom_right"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/ok_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/dialog_msg_background"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/dialog_msg_background_radius"
                android:visibility="visible">

                <TextView
                    android:id="@+id/ok_text"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginHorizontal="@dimen/dialog_msg_background_radius"
                    android:layout_marginVertical="@dimen/margin_big"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/ok"
                    android:textSize="@dimen/title_txt_size"
                    android:textColor="@color/red"
                    android:fontFamily="@font/euclidsquare_regular"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
