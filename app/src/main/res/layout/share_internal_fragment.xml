<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_normal"
    android:background="@color/dialog_msg_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/share_item_margin_top"
        android:layout_marginBottom="@dimen/share_item_margin_bottom"
        android:layout_marginHorizontal="@dimen/share_item_margin_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dialog_msg_background"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/link_with_colon"
                android:textSize="@dimen/info_txt_size"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/link_text"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/share_edit_text_height"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_edittext_share2"
                        android:ems="10"
                        android:fontFamily="@font/euclidsquare_medium"
                        android:importantForAutofill="auto"
                        android:inputType="number"
                        android:paddingStart="@dimen/share_edit_text_radius"
                        android:paddingEnd="@dimen/share_edit_text_radius"
                        android:textColor="@color/text_view_secondary_color"
                        android:textSize="@dimen/info_txt_size"
                        android:clickable="false"
                        android:focusable="false"
                        android:cursorVisible="false"/>

                    <FrameLayout
                        android:layout_width="54dp"
                        android:layout_height="@dimen/share_edit_text_height"
                        android:layout_marginEnd="@dimen/share_edit_minus_margin">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/copy_link_card"
                            android:layout_width="54dp"
                            android:layout_height="@dimen/share_edit_text_height"
                            android:layout_marginLeft="@dimen/share_edit_minus_margin"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardBackgroundColor="@color/dots_type_grey"
                            app:cardCornerRadius="@dimen/share_edit_text_radius"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignTop="@id/sort_by_text"
                                android:layout_alignBottom="@+id/sort_by_text"
                                android:layout_alignParentStart="true"
                                android:layout_gravity="center"
                                android:layout_marginLeft="6dp"
                                android:src="@drawable/ic_copy"
                                app:tint="@color/white" />
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/qr_card"
                    android:layout_width="@dimen/share_edit_text_height"
                    android:layout_height="@dimen/share_edit_text_height"
                    android:layout_marginLeft="@dimen/margin_large"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/dots_type_grey"
                    app:cardCornerRadius="@dimen/share_edit_text_radius"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@id/sort_by_text"
                        android:layout_alignBottom="@+id/sort_by_text"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:src="@drawable/qr"
                        app:tint="@color/white" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
