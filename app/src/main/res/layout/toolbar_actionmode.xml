<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/margin_normal"
    android:paddingHorizontal="@dimen/margin_large">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_button_height"
        android:clickable="false"
        android:focusable="false"
        app:cardBackgroundColor="@color/action_mode_background"
        app:cardCornerRadius="@dimen/toolbar_button_radius"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/margin_big"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/action_mode_title_text"
                android:layout_width="0dp"
                android:layout_height="@dimen/toolbar_action_mode_button_height"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="4 objects..."
                android:lines="1"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/action_mode_delete_card"
                    android:layout_width="@dimen/toolbar_action_mode_button_height"
                    android:layout_height="@dimen/toolbar_action_mode_button_height"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="@dimen/toolbar_action_mode_button_radius"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/toolbar_action_mode_button_margin"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_delete"
                        app:tint="@color/text_view_color"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/action_mode_copy_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/action_mode_copy_card"
                    android:layout_width="@dimen/toolbar_action_mode_button_height"
                    android:layout_height="@dimen/toolbar_action_mode_button_height"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="@dimen/toolbar_action_mode_button_radius"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/toolbar_action_mode_button_margin"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_copy"
                        app:tint="@color/text_view_color"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/action_mode_move_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/action_mode_move_card"
                    android:layout_width="@dimen/toolbar_action_mode_button_height"
                    android:layout_height="@dimen/toolbar_action_mode_button_height"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="@dimen/toolbar_action_mode_button_radius"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/toolbar_action_mode_button_margin"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_move"
                        app:tint="@color/text_view_color"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/action_mode_download_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/action_mode_download_card"
                    android:layout_width="@dimen/toolbar_action_mode_button_height"
                    android:layout_height="@dimen/toolbar_action_mode_button_height"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="@dimen/toolbar_action_mode_button_radius"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/toolbar_action_mode_button_margin"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_download"
                        app:tint="@color/text_view_color"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/action_mode_select_all_card"
                    android:layout_width="@dimen/toolbar_action_mode_button_height"
                    android:layout_height="@dimen/toolbar_action_mode_button_height"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="@dimen/toolbar_action_mode_button_radius"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/toolbar_action_mode_button_margin"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_select_all"
                        app:tint="@color/text_view_color"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/action_mode_close_card"
                    android:layout_width="@dimen/toolbar_action_mode_button_height"
                    android:layout_height="@dimen/toolbar_action_mode_button_height"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="@dimen/toolbar_action_mode_button_radius"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/toolbar_action_mode_button_margin"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_close"
                        app:tint="@color/text_view_color"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
