<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:paddingVertical="15dp"
    android:background="@drawable/shadow_share_background">


    <LinearLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/add_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/dialog_msg_background"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dialog_op_file_item_padding_horizontal"
                    android:layout_marginVertical="@dimen/dialog_op_file_item_padding_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/add_file"
                        android:textColor="@color/text_view_color" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/settings_divider" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sort_by_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/dialog_msg_background"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dialog_op_file_item_padding_horizontal"
                    android:layout_marginVertical="@dimen/dialog_op_file_item_padding_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sort_by_text"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_toStartOf="@+id/arrow_image_layout"
                        android:text="@string/sort_files"
                        android:textColor="@color/text_view_color" />

                    <LinearLayout
                        android:id="@id/arrow_image_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/sort_by_text"
                        android:layout_alignBottom="@+id/sort_by_text"
                        android:layout_alignParentEnd="true"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/arrow_image"
                            android:layout_width="@dimen/browser_menu_image_width"
                            android:layout_height="@dimen/browser_menu_image_width"
                            android:scaleType="center"
                            android:src="@drawable/ic_arrow_up"
                            app:tint="@color/text_view_color" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/sort_content_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/sort_by_text"
                        android:layout_alignStart="@+id/sort_by_text"
                        android:layout_marginStart="@dimen/dialog_action_bar_content_margin_left"
                        android:text="@string/name_hint"
                        android:textColor="@color/text_view_secondary_color"
                        android:fontFamily="@font/euclidsquare_regular"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/settings_divider" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/sort_collapse_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/name_up_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/dialog_msg_background"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dialog_op_file_item_padding_horizontal"
                        android:layout_marginVertical="@dimen/dialog_op_file_item_padding_vertical"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/dialog_action_bar_content_margin_left"
                            android:text="@string/name_hint"
                            android:textColor="@color/text_view_secondary_color"
                            android:fontFamily="@font/euclidsquare_regular"/>

                        <ImageView
                            android:layout_width="@dimen/browser_menu_image_width"
                            android:layout_height="@dimen/browser_menu_image_width"
                            android:scaleType="center"
                            android:src="@drawable/ic_arrow_up"
                            app:tint="@color/text_view_color" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/settings_divider" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/name_down_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/dialog_msg_background"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dialog_op_file_item_padding_horizontal"
                        android:layout_marginVertical="@dimen/dialog_op_file_item_padding_vertical"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/dialog_action_bar_content_margin_left"
                            android:text="@string/name_hint"
                            android:textColor="@color/text_view_secondary_color"
                            android:fontFamily="@font/euclidsquare_regular"/>

                        <ImageView
                            android:layout_width="@dimen/browser_menu_image_width"
                            android:layout_height="@dimen/browser_menu_image_width"
                            android:scaleType="center"
                            android:src="@drawable/ic_arrow_down"
                            app:tint="@color/text_view_color" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/settings_divider" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/last_modified_up_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/dialog_msg_background"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dialog_op_file_item_padding_horizontal"
                        android:layout_marginVertical="@dimen/dialog_op_file_item_padding_vertical"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/dialog_action_bar_content_margin_left"
                            android:text="@string/last_modified"
                            android:textColor="@color/text_view_secondary_color"
                            android:fontFamily="@font/euclidsquare_regular"/>

                        <ImageView
                            android:layout_width="@dimen/browser_menu_image_width"
                            android:layout_height="@dimen/browser_menu_image_width"
                            android:scaleType="center"
                            android:src="@drawable/ic_arrow_up"
                            app:tint="@color/text_view_color" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/settings_divider" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/last_modified_down_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/dialog_msg_background"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dialog_op_file_item_padding_horizontal"
                        android:layout_marginVertical="@dimen/dialog_op_file_item_padding_vertical"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/dialog_action_bar_content_margin_left"
                            android:text="@string/last_modified"
                            android:textColor="@color/text_view_secondary_color"
                            android:fontFamily="@font/euclidsquare_regular"/>

                        <ImageView
                            android:layout_width="@dimen/browser_menu_image_width"
                            android:layout_height="@dimen/browser_menu_image_width"
                            android:scaleType="center"
                            android:src="@drawable/ic_arrow_down"
                            app:tint="@color/text_view_color" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/settings_divider" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/dialog_msg_background"
        android:layout_below="@id/card_layout"
        android:layout_marginTop="-2dp"/>
</RelativeLayout>