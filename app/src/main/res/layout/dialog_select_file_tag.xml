<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="15dp"
    android:background="@drawable/msg_background">

    <LinearLayout
        android:id="@+id/close_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/share_edit_text_height"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_repo_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dialog_op_file_item_padding_horizontal"
            android:minHeight="15dp"
            android:text="@string/select_tags"
            android:textAlignment="center"
            android:textColor="@color/text_view_color"
            android:textSize="@dimen/subtitle_txt_size" />

        <androidx.cardview.widget.CardView
            android:id="@+id/close_card"
            android:layout_width="@dimen/share_edit_text_height"
            android:layout_height="@dimen/share_edit_text_height"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_gravity="top"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/share_edit_text_radius"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/toolbar_action_mode_button_margin"
                android:layout_gravity="center"
                android:src="@drawable/ic_close"
                app:tint="@color/dots_type_grey"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <GridView
        android:id="@+id/repo_tags_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/close_layout"
        android:scrollbarSize="0dp"/>
</RelativeLayout>