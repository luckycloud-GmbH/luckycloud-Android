<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:padding="@dimen/task_dialog_inner_padding">

	<EditText
    	android:id="@+id/new_dir_name"
    	android:layout_width="fill_parent"
		android:layout_height="@dimen/dialog_msg_txt_height"
		android:layout_marginHorizontal="@dimen/task_dialog_content_margin_horizontal"
		android:paddingHorizontal="@dimen/dialog_msg_txt_padding"
		android:background="@drawable/rounded_edittext_dialog"
		android:hint="@string/name_hint"
		android:textColor="@color/text_view_color"
		android:textColorHint="@color/dialog_msg_txt_hint"
		android:inputType="text" />

</LinearLayout>