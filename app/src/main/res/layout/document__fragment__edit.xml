<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context="com.seafile.seadroid2.document.markor.activity.DocumentEditAndViewFragment"
    tools:showIn="@layout/document__activity">

    <com.seafile.seadroid2.document.markor.frontend.DraggableScrollbarScrollView
        android:id="@+id/document__fragment__edit__content_editor__scrolling_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/toolbar_button_height"
        android:background="@android:color/transparent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/document__fragment__edit__editor_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.seafile.seadroid2.document.markor.frontend.textview.LineNumbersTextView
                android:id="@+id/document__fragment__edit__line_numbers_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:text="" />

            <com.seafile.seadroid2.document.markor.frontend.textview.HighlightingEditor
                android:id="@+id/document__fragment__edit__highlighting_editor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/light_gray"
                android:alpha="0"
                android:gravity="top"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textMultiLine|textCapSentences"
                android:minHeight="1dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="16dp"
                android:nestedScrollingEnabled="false"
                android:isScrollContainer="false"
                android:scrollbars="none"
                android:overScrollMode="never"
                android:scrollHorizontally="false"
                android:textCursorDrawable="@drawable/cursor_markor" />
        </LinearLayout>
    </com.seafile.seadroid2.document.markor.frontend.DraggableScrollbarScrollView>

    <com.seafile.seadroid2.document.opoc.frontend.GsHorizontalScrollView
        android:id="@+id/document__fragment__edit__text_actions_bar__scrolling_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_button_height"
        android:layout_gravity="bottom"
        android:background="@color/light_gray"
        android:paddingTop="4dp">

        <LinearLayout
            android:id="@+id/document__fragment__edit__text_actions_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/light_gray"
            android:orientation="horizontal" />
    </com.seafile.seadroid2.document.opoc.frontend.GsHorizontalScrollView>

    <com.seafile.seadroid2.document.markor.web.DraggableScrollbarWebView
        android:id="@+id/document__fragment_view_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/toolbar_button_height"
        android:background="@color/light_gray"
        android:visibility="invisible" />

    <FrameLayout
        android:id="@+id/document__fragment_fullscreen_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="gone" />
</FrameLayout>
