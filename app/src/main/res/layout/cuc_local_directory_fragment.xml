<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/margin_large">

    <TextView
        android:id="@+id/cuc_local_library_header_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/tv_title_margin_left"
        android:layout_marginTop="@dimen/tv_title_margin_top"
        android:text="@string/settings_cuc_local_dir_title"
        android:textAlignment="center"
        android:textColor="@color/luckycloud_green"
        android:textSize="@dimen/subtopic_txt_size" />

    <RadioGroup
        android:id="@+id/cuc_local_directory_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/cuc_local_directory_auto_scan_rb"
        android:layout_alignLeft="@+id/cuc_local_library_header_tv"
        android:layout_below="@+id/cuc_local_library_header_tv"
        android:layout_marginTop="@dimen/section_margin_top" >

        <RadioButton
            android:id="@+id/cuc_local_directory_auto_scan_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_marginBottom="@dimen/tv_subtitle_margin_top"
            android:paddingStart="@dimen/radio_text_padding"
            android:button="@drawable/rounded_checkbox2"
            android:textColor="@color/text_view_color"
            android:text="@string/cuc_local_directory_first_radio"/>

        <RadioButton
            android:id="@+id/cuc_local_directory_pick_folders_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rb_margin_top"
            android:paddingStart="@dimen/radio_text_padding"
            android:button="@drawable/rounded_checkbox2"
            android:textColor="@color/text_view_color"
            android:text="@string/cuc_local_directory_second_radio"/>
    </RadioGroup>

    <GridView
        android:id="@+id/cuc_bucket_selection_grid"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/cuc_local_directory_card"
        android:layout_below="@+id/cuc_local_directory_radio_group"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/section_margin_top"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:columnWidth="150dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        android:scrollbarSize="0dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cuc_local_directory_card"
        android:layout_width="@dimen/cuc_button_width"
        android:layout_height="@dimen/cuc_button_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_normal"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/luckycloud_green"
        app:cardCornerRadius="@dimen/cuc_button_radius"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/continue_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@drawable/rounded_transfer_button_on"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/info_txt_size" />

    </androidx.cardview.widget.CardView>



</RelativeLayout>