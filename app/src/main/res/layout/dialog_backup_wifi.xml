<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/parentPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/msg_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/folder_backup_mode_title"
            android:textSize="@dimen/topic_txt_size"
            android:textColor="@color/luckycloud_green"
            android:gravity="center"/>

        <RadioGroup
            android:id="@+id/auto_expiration_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:layout_marginVertical="@dimen/margin_normal">

            <RadioButton
                android:id="@+id/wifi_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/rounded_checkbox_share"
                android:paddingStart="@dimen/margin_normal"
                android:text="@string/settings_folder_backup_traffic_hint"
                android:textColor="@color/text_view_color"
                android:textSize="@dimen/subtitle_txt_size" />

            <RadioButton
                android:id="@+id/traffic_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:button="@drawable/rounded_checkbox_share"
                android:paddingStart="@dimen/margin_normal"
                android:text="@string/folder_backup_mode"
                android:textColor="@color/text_view_color"
                android:textSize="@dimen/subtitle_txt_size"/>
        </RadioGroup>

        <LinearLayout
            android:id="@+id/double_card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:background="@drawable/rounded_dialog_bottom2"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="1dp"
                android:background="@drawable/rounded_dialog_bottom_left"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cancel_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/dialog_msg_background"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/dialog_msg_background_radius"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/cancel_text"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:layout_marginHorizontal="@dimen/dialog_msg_background_radius"
                        android:layout_marginVertical="@dimen/margin_big"
                        android:layout_gravity="center"
                        android:text="@string/cancel"
                        android:textSize="@dimen/title_txt_size"
                        android:textColor="@color/luckycloud_green"
                        android:fontFamily="@font/euclidsquare_regular"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="1dp"
                android:background="@drawable/rounded_dialog_bottom_right"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ok_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/dialog_msg_background"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/dialog_msg_background_radius"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/ok_text"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginHorizontal="@dimen/dialog_msg_background_radius"
                        android:layout_marginVertical="@dimen/margin_big"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="@string/ok"
                        android:textSize="@dimen/title_txt_size"
                        android:textColor="@color/red"
                        android:fontFamily="@font/euclidsquare_regular"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
