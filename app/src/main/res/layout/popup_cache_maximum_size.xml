<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:orientation="vertical"
    android:gravity="start"
    android:background="@drawable/popup_background">

    <androidx.cardview.widget.CardView
        android:id="@+id/cache_max_1_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/popup_background"
        app:cardCornerRadius="@dimen/dialog_msg_background_radius"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dialog_op_file_item_padding_horizontal"
                android:layout_marginVertical="@dimen/dialog_op_file_item_padding_vertical"
                android:text="1GB"
                android:textSize="@dimen/info_txt_size"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/settings_divider"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cache_max_5_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/popup_background"
        app:cardCornerRadius="@dimen/dialog_msg_background_radius"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dialog_op_file_item_padding_horizontal"
                android:layout_marginVertical="@dimen/dialog_op_file_item_padding_vertical"
                android:text="5GB"
                android:textSize="@dimen/info_txt_size"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/settings_divider"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cache_max_10_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/popup_background"
        app:cardCornerRadius="@dimen/dialog_msg_background_radius"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dialog_op_file_item_padding_horizontal"
                android:layout_marginVertical="@dimen/dialog_op_file_item_padding_vertical"
                android:text="10GB"
                android:textSize="@dimen/info_txt_size"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/settings_divider"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>