<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="@dimen/margin_large"
    android:orientation="vertical">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/settings_divider" />

    <androidx.cardview.widget.CardView
        android:id="@+id/view_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:foreground="@android:color/transparent"
        app:cardBackgroundColor="@color/dialog_msg_background"
        app:cardCornerRadius="@dimen/margin_normal"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_normal"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/lv_icon_height"
                android:layout_marginStart="@dimen/lv_item_padding_left"
                android:gravity="center">

                <ImageView
                    android:id="@+id/backup_file_icon"
                    android:layout_width="@dimen/lv_icon_width"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_file" />

                <LinearLayout
                    android:id="@+id/backup_file_image_layout"
                    android:layout_width="@dimen/lv_icon_width2"
                    android:layout_height="@dimen/lv_icon_height2"
                    android:background="@drawable/rounded_image"
                    android:weightSum="1"
                    android:gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/backup_file_icon_image"
                        android:layout_width="36dp"
                        android:layout_height="46dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/backup_file_layout"
                    android:layout_width="@dimen/lv_icon_width2"
                    android:layout_height="@dimen/lv_icon_height2"
                    android:background="@drawable/ic_file"
                    android:gravity="bottom|end"
                    android:paddingHorizontal="@dimen/padding_small"
                    android:paddingVertical="@dimen/padding_small"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/backup_file_icon_with_extension"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="fitEnd"
                        android:layout_gravity="bottom"/>

                    <TextView
                        android:id="@+id/backup_file_icon_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/subinfo_txt_size"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/margin_larger"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/backup_file_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="@color/text_view_color"/>

                    <TextView
                        android:id="@+id/backup_source_path"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="start"
                        android:textColor="@color/text_view_secondary_color"
                        android:textSize="@dimen/subtitle_txt_size"
                        android:fontFamily="@font/euclidsquare_regular"/>

                    <TextView
                        android:id="@+id/backup_target_path"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="@color/text_view_secondary_color"
                        android:textSize="@dimen/subtitle_txt_size"
                        android:fontFamily="@font/euclidsquare_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/backup_file_state_card"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:foreground="?selectableItemBackground"
                        app:cardBackgroundColor="@color/red"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:id="@+id/backup_file_state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_small"
                            android:layout_marginVertical="2dp"
                            android:lines="1"
                            android:singleLine="true"
                            android:textColor="@color/field"
                            android:textSize="@dimen/subtitle_txt_size"
                            android:fontFamily="@font/euclidsquare_regular"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/backup_file_size"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:gravity="center"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="@color/text_view_secondary_color"
                        android:textSize="@dimen/subtitle_txt_size"
                        android:fontFamily="@font/euclidsquare_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:typeface="monospace"
                            android:text="@string/start_time"
                            android:textColor="@color/text_view_secondary_color"
                            android:textSize="@dimen/subtitle_txt_size"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:typeface="monospace"
                            android:text="@string/end_time"
                            android:textColor="@color/text_view_secondary_color"
                            android:textSize="@dimen/subtitle_txt_size"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/backup_start_time_text"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:typeface="monospace"
                            android:lines="1"
                            android:singleLine="true"
                            android:textColor="@color/text_view_secondary_color"
                            android:textSize="@dimen/subtitle_txt_size"/>

                        <TextView
                            android:id="@+id/backup_end_time_text"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:typeface="monospace"
                            android:lines="1"
                            android:singleLine="true"
                            android:textColor="@color/text_view_secondary_color"
                            android:textSize="@dimen/subtitle_txt_size"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
