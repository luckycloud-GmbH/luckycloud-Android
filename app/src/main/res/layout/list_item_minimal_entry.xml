<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_big"
    android:paddingHorizontal="@dimen/margin_large">

    <androidx.cardview.widget.CardView
        android:id="@+id/view_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/dialog_msg_background"
        app:cardCornerRadius="@dimen/margin_normal"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/lv_item_inset"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/list_item_multi_select_btn"
                android:layout_width="@dimen/lv_multi_select_width"
                android:layout_height="@dimen/lv_multi_select_height"
                android:paddingStart="@dimen/lv_multi_select_padding_left"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/lv_icon_minimal_height"
                android:layout_marginStart="@dimen/lv_item_padding_left"
                android:gravity="center">

                <ImageView
                    android:id="@+id/list_item_icon"
                    android:layout_width="@dimen/repo_item_icon_minimal_width"
                    android:layout_height="wrap_content"
                    android:src="@drawable/repo_encrypted" />

                <LinearLayout
                    android:id="@+id/list_item_icon_image_layout"
                    android:layout_width="@dimen/repo_item_icon_minimal_width2"
                    android:layout_height="@dimen/lv_icon_minimal_height2"
                    android:background="@drawable/rounded_image"
                    android:weightSum="1"
                    android:gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/list_item_icon_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/list_item_icon_file_layout"
                    android:layout_width="@dimen/repo_item_icon_minimal_width2"
                    android:layout_height="@dimen/lv_icon_minimal_height2"
                    android:background="@drawable/ic_file"
                    android:gravity="bottom|end"
                    android:paddingHorizontal="@dimen/padding_small"
                    android:paddingVertical="@dimen/padding_small"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/list_item_icon_file_icon"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:scaleType="fitEnd"
                        android:layout_gravity="bottom"/>

                    <TextView
                        android:id="@+id/list_item_icon_file_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="8sp"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/list_item_space"
                android:layout_width="@dimen/lv_space_width"
                android:layout_height="fill_parent" />

            <LinearLayout
                android:id="@+id/list_item_txt_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginVertical="@dimen/margin_small"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/list_item_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/list_item_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"/>

                <LinearLayout
                    android:id="@+id/list_item_subtitle_group"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:visibility="gone">

                    <ProgressBar
                        android:id="@+id/list_item_download_status_progressbar"
                        android:layout_width="@dimen/lv_download_icon_width"
                        android:layout_height="@dimen/lv_download_icon_height"
                        android:layout_marginEnd="@dimen/lv_download_icon_margin_right"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/list_item_subtitle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/margin_small"
                        android:fontFamily="@font/euclidsquare_regular"
                        android:textColor="@color/dots_type_grey"
                        android:textSize="@dimen/subtitle_txt_size" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tag_color_recycler"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_height="16dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="0dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/list_item_download_status_icon"
                android:layout_width="@dimen/lv_download_icon_width"
                android:layout_height="@dimen/lv_download_icon_height"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginEnd="@dimen/lv_download_icon_margin_right"
                android:contentDescription="@null"
                android:src="@drawable/ic_list_item_download_finished"
                android:layout_gravity="top"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/expandable_toggle_button"
                    android:layout_width="@dimen/repo_item_more_card_minimal_width"
                    android:layout_height="@dimen/repo_item_more_card_minimal_width"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="@dimen/margin_big"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:visibility="visible"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="@dimen/repo_item_more_card_radius"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_overflow" />
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/repo_type_image"
                    android:layout_width="@dimen/repo_item_group_minimal_width"
                    android:layout_height="@dimen/repo_item_group_minimal_height"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_large"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/ic_repo_personal" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <include
        android:id="@+id/group_layout"
        layout="@layout/group_item"
        android:visibility="gone"/>
</RelativeLayout>