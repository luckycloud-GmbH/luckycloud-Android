<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/gesture_background">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.0" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_luckycloud_wortbildmarke"
        app:tint="@color/gesture_foreground" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0" />

    <TextView
        android:id="@+id/gesturepwd_create_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dip"
        android:layout_marginRight="40.0dip"
        android:layout_marginTop="0.0dip"
        android:gravity="center_horizontal"
        android:text="@string/lockpattern_recording_intro_header"
        android:textColor="@color/luckycloud_green"
        android:textSize="@dimen/tv_subtitle_txt_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.0" />

    <com.seafile.seadroid2.gesturelock.LockPatternView
        android:id="@+id/gesturepwd_create_lockview"
        android:layout_width="488.0dip"
        android:layout_height="488.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10.0dip" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.0" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dip"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/reset_card"
            android:layout_width="120dp"
            android:layout_height="36dp"
            app:cardCornerRadius="18dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/gesture_foreground"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/reset_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="@string/lockpattern_retry_button_text"
                android:textSize="@dimen/info_txt_size"
                android:textColor="@color/gesture_foreground"
                android:background="@drawable/rounded_gesture_button_cancel"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/right_card"
            android:layout_width="120dp"
            android:layout_height="36dp"
            app:cardCornerRadius="18dp"
            android:layout_marginStart="20dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/gesture_foreground"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/right_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="@string/lockpattern_confirm_button_text"
                android:textSize="@dimen/info_txt_size"
                android:textColor="@color/gesture_background"
                android:background="@drawable/rounded_gesture_button_ok"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.0" />

</LinearLayout>